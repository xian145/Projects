generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model trip {
  id         Int       @id @default(autoincrement())
  user       String
  name       String
  start_date DateTime  @default(now())
  end_date   DateTime?
  expense    expense[]
}

model expense {
  id       Int      @id @default(autoincrement())
  name     String
  date     DateTime @default(now())
  amount   Float
  currency String
  trip     trip     @relation(fields: [tripid], references: [id])
  tripid   Int
}
